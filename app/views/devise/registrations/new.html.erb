<div class="banner" style="background-image: url('http://mzwnews.com/wp-content/uploads/2017/09/Blog-Berlin-move.jpg');">
  <div class="banner-content">

<h2 class="text-center">Create your account</h2>
    <div class="form-container">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-wrapper">
    <%= f.input :first_name,
                required: true,
                autofocus: true %>
    <%= f.input :last_name,
                required: true,
                autofocus: true %>
    <%= f.input :city,
                required: true,
                autofocus: true %>
    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email" }%>
    <%= f.hidden_field :buddy, :value => false %>
    <% if params[:buddy] %>
      <%= f.input :plz,
                  class: "form-control",
                  placeholder: "Enter your postcode"%>
      <% @specialties = ["Anmeldung", "Bank Account", "Tax Advise" ] %>

      <%= f.select "specialties", options_for_select(@specialties, "specialties"),
                    include_blank: true,
                    class: "form-control",
                    prompt: "Select a procedure" %>
      <%= f.hidden_field :buddy, :value => true %>
    <% end %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>


  <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "submit-button" %>
      </div>

      </div>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>
